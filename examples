examples


 ---
- hosts: local
  tasks:
     - shell: cat /etc/motd
       register: motd_contents
     - debug: msg="stdout={{motd_contents}}"
     - debug: msg="MOTD is EMPTY"
       when: motd_contents.stdout == ""

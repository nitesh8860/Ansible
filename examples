  become: yes
  vars:
    database_name_here: wordpress
    username_here: wordpress
    password_here: mypassword1
    dbhost_here: 172.31.108.177
  tasks:
   - name: copy template to host
     template: src=wp-config.j2 dest=/home/ansible/wp-config.php
     
